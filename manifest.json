{
  "manifest_version": 2,
  "name": "Heroku Status",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-2.2.1.min.js", "content.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Heroku Status"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "https://status.heroku.com/api/v3/current-status"
  ]
}
